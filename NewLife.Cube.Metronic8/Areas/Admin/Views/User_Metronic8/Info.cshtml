<div class="row m-0">
    <div class=" col-xl-3 col-lg-4">
        <div class="card  pb-lg-20">
            <div class="card-header">
                <h4 class="card-title text-muted">信息选项</h4>
            </div>

            <div class="text-center col-md-12 cube-flex-con cube-flex-items">
                <ul class="nav nav-tabs nav-pills flex-row border-0 flex-md-column mt-2 mb-3 mb-md-0 fs-6">
                    <li class="nav-item me-0 pt-2 pm-3 text-start">
                        <a class="nav-link active bg-light-info text-info" href="@Url.Action("info")"><span class="fas fa-user text-info pe-5"></span>基本信息</a>
                    </li>
                    <li class="nav-item me-0 pt-2 pm-3 text-start">
                        <a class="nav-link text-gray-700" href="@Url.Action("ChangePassword", new {ID=user.ID})"><span class="fas fa-unlock text-gray-700 pe-5"></span>修改密码</a>
                    </li>
                    <li class="nav-item me-0 pt-2 pm-3 text-start">
                        <a class="nav-link text-gray-700" href="@Url.Action("Binds", new {ID=user.ID})"><span class="fas fa-user-lock text-gray-700 pe-5"></span>第三方授权</a>
                    </li>

                </ul>
            </div>

        </div>


        
    </div>

    <div class="col-xl-9 col-lg-8">
        <div class="card mb-5 mb-xl-10">
            <div class="card-header cursor-pointer">
                <div class="card-title m-0">
                    <h3 class="card-title text-muted">用户信息</h3>
                </div>
                <a href="@Url.Action("Edit", new {ID=user.ID})" class="btn btn-sm btn-outline btn-outline-dashed btn-outline-info btn-active-light-info align-self-center"><i class="fas fa-user-edit text-info pe-2"></i>修改信息</a>
            </div>

            <div class="card-body p-9">
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">账号</label>
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-dark">@user.Name</span>
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">名称</label>
                    <div class="col-lg-8 fv-row">
                        <span class="fw-bold fs-6">@user.DisplayName</span>
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">
                        手机
                        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="" data-bs-original-title="" aria-label=""></i>
                    </label>
                    <div class="col-lg-8 d-flex align-items-center">
                        <span class="fw-bolder fs-6 me-2">@user.Mobile</span>
                        <span class="badge badge-success"></span>
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">邮箱</label>
                    <div class="col-lg-8">
                        <a href="#" class="fw-bold fs-6 text-dark text-hover-primary">@user.Mail</a>
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">
                        代码
                        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="" data-bs-original-title="" aria-label=""></i>
                    </label>
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-dark">@user.Code</span>
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">启用</label>
                    <div class="col-lg-8">
                        <input checked="checked" class="form-check-input" id="Enable" name="Enable" type="checkbox" value="@user.Enable">
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">在线</label>
                    <div class="col-lg-8">
                        <input checked="checked" class="form-check-input" id="Online" name="Online" type="checkbox" value="@user.Online">
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">注册时间</label>
                    <div class="col-lg-8">
                        <span class="fw-bold fs-6">@user.RegisterTime</span>
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">注册IP</label>
                    <div class="col-lg-8">
                        <span class="fw-bold fs-6">@user.RegisterIP</span>
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">更新者</label>
                    <div class="col-lg-8">
                        <span class="fw-bold fs-6">@user.UpdateUser</span>
                    </div>
                </div>
                <div class="row mb-5">
                    <label class="col-lg-4 fw-bold text-muted">更新时间</label>
                    <div class="col-lg-8">
                        <span class="fw-bold fs-6">@user.UpdateTime</span>
                    </div>
                </div>
                <div class="row mb-10">
                    <label class="col-lg-4 fw-bold text-muted">更新IP</label>
                    <div class="col-lg-8">
                        <span class="fw-bold fs-6">@user.UpdateIP</span>
                    </div>
                </div>



            </div>
        </div>

    </div>
</div>

