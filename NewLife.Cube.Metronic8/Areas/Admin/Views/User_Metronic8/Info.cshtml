@*
    用户信息
*@
@model XCode.Membership.User;
@using System.Linq;
@using System.Reflection;
@using XCode;
@using XCode.Configuration
@using NewLife.Cube.Entity;
@using XCode.Membership;
@using NewLife;

@{
